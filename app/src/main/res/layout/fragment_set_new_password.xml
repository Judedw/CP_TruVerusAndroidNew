    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="13dp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="15dp"
                android:text="Rest Your Password"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/txtNewPW"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_input"
                android:drawableStart="@drawable/ic_email_black"
                android:drawablePadding="10dp"
                android:hint="New Password"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/personalDetailsTextColor"
                android:textSize="14sp"
                android:drawableTint="@color/personalDetailsTextColor"
                android:drawableLeft="@drawable/ic_email_black" />

            <EditText
                android:id="@+id/txtReenterPW"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_input"
                android:drawableStart="@drawable/ic_email_black"
                android:drawablePadding="10dp"
                android:hint="Re-enter Password"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/personalDetailsTextColor"
                android:textSize="14sp"
                android:drawableTint="@color/personalDetailsTextColor"
                android:drawableLeft="@drawable/ic_email_black" />

            <Button
                android:id="@+id/btnSaveAcc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/black_input_button"
                android:text="Save"
                android:padding="5dp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>

