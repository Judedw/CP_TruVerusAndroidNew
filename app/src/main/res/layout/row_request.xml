<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/colectionImg"
        android:layout_width="match_parent"
        android:background="@drawable/adidas"
        android:scaleType="center"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/collectionLbl"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="adidas jacket"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Accept"
            android:layout_weight="1"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/green_accept_button_overlay" />
        <Button
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Cancel"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/red_cancel_button_overlay" />
    </LinearLayout>

</LinearLayout>